{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "Product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "price": {
      "type": "decimal",
      "required": true
    },
    "inStock": {
      "type": "integer"
    },
    "comments": {
      "collection": "comment",
      "via": "product"
    },
    "order_item": {
      "via": "product",
      "model": "order-item"
    },
    "categories": {
      "collection": "category",
      "via": "product"
    }
  }
}
